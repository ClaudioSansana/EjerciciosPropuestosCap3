Proceso operaciones
	
	//Pedir datos
	Escribir "Ingrese Primer numero:";
	Leer A;
	Escribir "Ingrese Segundo numero:";
	Leer B;
	Escribir "Ingrese Tercer numero:";
	Leer C;
	
		//Operaciones
			//Suma	
				suma<-A+B+C;
			//Promedio
				prom<-suma/3;
			//Doble del primero
				DP<-2*A;
			//Triple del segundo
				TS<-3*B;
			//Cuadrado del tercero
				CT<-C^2;	
				
				//Entrega de resultados
				Escribir "El promedio de los tres numeros es:   ||",prom;
				Escribir "La suma de los tres numeros es:       ||", suma;
				Escribir "El doble del Primer numero es:        ||", DP;
				Escribir "El triple del Segundo numero es:      ||", TS;
				Escribir "El cuadrado del Tercer numero es:     ||",CT; 
FinProceso
